<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bC"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_orange_light"
        android:text="C"
        android:textSize="40dp" />

    <Button
        android:id="@+id/bPlus"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/b9"
        android:layout_toEndOf="@+id/b9"
        android:background="@android:color/holo_blue_bright"
        android:text="+"
        android:textSize="40dp" />

    <Button
        android:id="@+id/b9"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/b8"
        android:layout_toEndOf="@+id/b8"
        android:background="@android:color/darker_gray"
        android:text="9"
        android:textSize="40dp" />

    <Button
        android:id="@+id/b8"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/b7"
        android:layout_toEndOf="@+id/bC"
        android:background="@android:color/darker_gray"
        android:text="8"
        android:textSize="40dp" />

    <Button
        android:id="@+id/b7"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/bMinus"
        android:layout_alignParentStart="true"
        android:background="@android:color/darker_gray"
        android:text="7"
        android:textSize="40dp" />

    <Button
        android:id="@+id/bMinus"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/b6"
        android:layout_toEndOf="@+id/b6"
        android:background="@android:color/holo_blue_bright"
        android:text="-"
        android:textSize="40dp" />

    <Button
        android:id="@+id/b6"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/b5"
        android:layout_toEndOf="@+id/b5"
        android:background="@android:color/darker_gray"
        android:text="6"
        android:textSize="40dp" />

    <Button
        android:id="@+id/b5"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/b2"
        android:layout_toEndOf="@+id/bC"
        android:background="@android:color/darker_gray"
        android:text="5"
        android:textSize="40dp" />

    <Button
        android:id="@+id/b2"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/bC"
        android:layout_toEndOf="@+id/bC"
        android:background="@android:color/darker_gray"
        android:text="2"
        android:textSize="40dp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/bC"
        android:layout_alignParentStart="true"
        android:background="@android:color/darker_gray"
        android:text="1"
        android:textSize="40dp" />

    <Button
        android:id="@+id/bDivide"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/bEqual"
        android:background="@android:color/holo_blue_bright"
        android:text="รท"
        android:textSize="40dp" />

    <Button
        android:id="@+id/bEqual"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/b0"
        android:background="@android:color/holo_orange_light"
        android:text="="
        android:textSize="40dp" />

    <Button
        android:id="@+id/b4"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/b2"
        android:layout_alignParentStart="true"
        android:background="@android:color/darker_gray"
        android:text="4"
        android:textSize="40dp" />

    <Button
        android:id="@+id/bMultiply"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/bC"
        android:layout_alignStart="@+id/bDivide"
        android:background="@android:color/holo_blue_bright"
        android:text="x"
        android:textSize="40dp" />

    <Button
        android:id="@+id/b3"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/bC"
        android:layout_toEndOf="@+id/b2"
        android:background="@android:color/darker_gray"
        android:text="3"
        android:textSize="40dp" />

    <Button
        android:id="@+id/b0"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/bC"
        android:background="@android:color/darker_gray"
        android:text="0"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/solution"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:textSize="80dp" />


</RelativeLayout>